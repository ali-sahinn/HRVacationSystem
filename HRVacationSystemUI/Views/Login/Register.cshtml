@model HRVacationSystemUI.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layoutastromotion.cshtml";

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>KAYIT OL</title>
</head>
<body>

    <div class="col-md-6">
        <h1 class="contact_text">KAYIT OLABİLİRSİNİZ...</h1>
        <div class="contact_main">

            @using (Html.BeginForm("Register", "Login", FormMethod.Post,
new
{
@class = "form-horizontal",
enctype = "multipart/form-data"
}))
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control", placeholder = "İsim" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Surname, null, new { @class = "form-control", placeholder = "Soyisim" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Email, null, new { @class = "form-control", placeholder = "Email" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Password, null, new { @class = "form-control", placeholder = "Şifre", @type = "password" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.ConfirmPassword, null, new { @class = "form-control", placeholder = "Şifre Tekrarı", @type = "password" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.BirthDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" }) <br />
                        </div>
                    </div>
                    <div class="col-md-6">

                        <label>Cinsiyet</label>
                        @Html.DropDownListFor(x => x.GenderPage, (List<SelectListItem>)ViewBag.Genders, new { @class = "form-control" })

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div style="margin-top:30px;">
                                @Html.ActionLink("KAYIT OL", "Register", "Login", new { @class = "btn btn-info" })
                            </div>
                        </div>
                    </div>

                </div>

            }

            <div class="col-md-6">
            </div>
</body>
</html>